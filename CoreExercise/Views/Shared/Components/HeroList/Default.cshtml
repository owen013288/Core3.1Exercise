@model IEnumerable<Card>

@foreach (var item in Model)
{
    <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12">
        <div class="card">
            <div class="headshot">
                <img class="card-img-top" src="~/Images/@item.Photo" alt="...">
            </div>
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <p class="card-text">@item.Brief</p>
                <a href="@item.WikiUrl" class="btn btn-primary">Wiki</a>
            </div>
        </div>
    </div>
}
