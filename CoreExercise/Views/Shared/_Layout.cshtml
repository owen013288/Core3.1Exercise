<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CoreExercise</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/lib/limonte-sweetalert2/sweetalert2.css" rel="stylesheet" />
    <!-- 引入Bootstrap字體圖標 -->
    <link rel="stylesheet" href="~/css/bootstrap-icons.css" />
    <style>
        @@media screen and (max-width: 992px) {
            .nav-item {
                background-color: rgba(0, 255, 255, 0.5);
            }

                .nav-item:hover {
                    background-color: rgba(0, 255, 255, 1);
                }

            .dropdown-menu li:hover > a {
                background-color: rgba(0, 255, 255, 1) !important;
            }

            .searchForm {
                margin-top: 10px;
            }
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/bootstrap-logo.svg" alt="" width="50" height="40">
                </a>
                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarNav"
                        aria-controls="navbarNav"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <div class="navbar-nav">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-dark ms-3" asp-area="" asp-controller="Home" asp-action="Index">首頁</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark ms-3" asp-area="" asp-controller="First" asp-action="Index">第一堂課</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link text-dark ms-3 dropdown-toggle" href="#" id="navbarScrollingDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    第二堂課
                                </a>
                                <ul class="dropdown-menu mt-2" aria-labelledby="navbarScrollingDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Second" asp-action="Index">IWebHostEnvironment學習</a>
                                    </li>
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Second" asp-action="BootstrapIndex">Bootstrap學習</a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark ms-3" asp-area="" asp-controller="Friends" asp-action="Index">Controller學習</a>
                            </li>
                        </ul>
                    </div>
                    <div class="navbar-nav ms-auto searchForm">
                        <form class="d-flex">
                            <input class="form-control me-2" type="search" placeholder="搜尋" aria-label="Search">
                            <button class="btn btn-success text-nowrap" type="submit">搜尋</button>
                        </form>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - CoreExercise -
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/limonte-sweetalert2/sweetalert2.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <partial name="_ValidationScriptsPartial" />
    @RenderSection("Scripts", required: false)
</body>
</html>
